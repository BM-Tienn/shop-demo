<!-- Contact Start -->
<div class="container-xxl contact py-5">
	<div class="container">
		<div class="section-title text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
			<p class="fs-5 fw-medium fst-italic text-primary">
				{{ pimcore_input('description', { placeholder: 'Mô tả chính' }) }}
			</p>
			<h1 class="display-6">
				{{ pimcore_input('title', { placeholder: 'Tiêu đề chính' }) }}
			</h1>
		</div>
		<div class="row justify-content-center wow fadeInUp" data-wow-delay="0.1s">
			<div class="col-lg-8">
				<p class="text-center mb-5">
					{{ 
                        editmode 
                        ? pimcore_textarea("content", { placeholder: 'Mô tả chi tiết', htmlspecialchars: false, height: 150 }) 
                        : pimcore_textarea("content", { htmlspecialchars: false }) | nl2br 
                    }}
				</p>
				<div class="row g-5">
					{% for i in 1..3 %}
						<div class="col-md-4 text-center wow fadeInUp" data-wow-delay="0.3s">

							{% if editmode %}
								{{ pimcore_image('icon' ~ i, { 'title': "Ảnh icon", class: 'mb-3' }) }}
							{% else %}
								<div class="btn-square mx-auto mb-3">
									{% set image = pimcore_image('icon' ~ i).isEmpty() ?
                                                pimcore_website_config('article') : pimcore_image('icon' ~ i).image %}

									{{ include("components/image.html.twig", { image: image, class: "" }) }}
								</div>
							{% endif %}

							<p class="mb-2">
								{{ pimcore_input('descriptionOne' ~ i, { placeholder: 'Mô tả' }) }}
							</p>
							<p class="mb-0">
								{{ pimcore_input('descriptionTwo' ~ i, { placeholder: 'Mô tả' }) }}
							</p>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Contact Start -->
